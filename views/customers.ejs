<% include partials/header %>

<div class="container">
<header class="jumbotron">
    <div class = "container">
        <h1>Welcome to TruSponse Notify</h1>
            <p>Your solution for customer notification</p>
            <p>
                <a class = "btn btn-primary btn-lg" href="/">Return to Main</a>
        
                <a class = "btn btn-primary btn-lg" href="/customers/new">Add a New Customer</a>
            </p>
    </div>
</header>

<!--<body>-->
    <div class = "row">
        <div class="col-lg-12">
            <h3>Current Customers</h3>
        </div>
    </div>
    
    <div class="container">
        <div class = "row">
            <table class="table table-dark table-striped table-bordered table-sm">
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th></th>
                </tr>
                
                <% customers.forEach(function(customers) { %>
                    <div>
                        <tr>
                            <td><%= customers.first_name %></td>
                            <td><%= customers.last_name %></td>
                            <td><%= customers.email %></td>
                            <td><a href="/customers/<%= customers._id %>" class="btn btn-sm btn-primary">More</a></td>
                        </tr>
                    </div>
                <% }); %>
            </table>
        </div>
    </div>
